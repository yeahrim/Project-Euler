#include <iostream>
#include <array>
using namespace std;

int main () {
	int prompt;
	int total = 0;
	int sum=0;

	cout << "Enter number.";
	cin >> prompt;

	int list [prompt];

	for (int i=0; i<prompt; i++) {
		list[i] = i;
	}

	for (int i=1; i<prompt; i++) {
		if (list[i]%3 == 0 || list[i]%5 == 0) {
			
				sum = list[i];
				total += sum;
		}
		
	}
	
	cout << total;
	return 0;
}
